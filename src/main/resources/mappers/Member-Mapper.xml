<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codebook.mapper.MemberMapper">
    <insert id="memberSignUp">
        INSERT INTTO MEMBER VALUES(#{member.email}, #{member.name}, #{member.password})
    </insert>
    <select id="login" resultType="int">
        SELECT COUNT(*) FROM MEMBER WHERE EMAIL = #{email} AND PASSWORD = #{password}
    </select>
</mapper>
